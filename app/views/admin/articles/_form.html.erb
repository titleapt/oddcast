<%= form_with(model: [:admin,article], class: "contents") do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form.fields_for :content do |content| %>
      <div>
        <%= content.label :title, style: "display: block" %>
        <%= content.text_field :title %>
      </div>
  
      <div>
        <%= content.label :description, style: "display: block" %>
        <%= content.textarea :description %>
      </div>
    <% end %>
      <div>
        <%= form.label :image_url, style: "display: block" %>
        <%= form.text_field :image_url %>
      </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
